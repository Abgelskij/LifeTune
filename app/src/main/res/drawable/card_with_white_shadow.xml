<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Основной фон карточки -->
    <item>
        <shape>
            <solid android:color="#151618" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Очень тонкая белая тень по контуру -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#10FFFFFF" /> <!-- 6% прозрачности -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>