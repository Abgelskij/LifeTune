<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LifeTune" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Основной фон -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@android:color/transparent</item>
        <!-- Цвет акцентов (убираем бирюзовый) -->
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryDark">@color/toolbar_background</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.LifeTune.Goals" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryDark">@color/toolbar_background</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>

        <!-- Добавьте этот атрибут для заголовка Toolbar -->
        <item name="toolbarStyle">@style/Widget.LifeTune.Toolbar</item>
    </style>

    <style name="Widget.LifeTune.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


</resources>